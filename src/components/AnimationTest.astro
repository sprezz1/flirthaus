---
// Simple test component to verify animations are working
---

<div class="fixed bottom-4 right-4 bg-black text-white px-4 py-2 rounded text-sm z-50" id="animation-status">
  Checking animations...
</div>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  setTimeout(() => {
    const statusEl = document.getElementById('animation-status');
    if (statusEl) {
      const animElements = document.querySelectorAll('.scroll-animation');
      const hasGsap = typeof gsap !== 'undefined';
      const hasScrollTrigger = typeof ScrollTrigger !== 'undefined';

      statusEl.innerHTML = `
        GSAP: ${hasGsap ? '✓' : '✗'}<br>
        ScrollTrigger: ${hasScrollTrigger ? '✓' : '✗'}<br>
        Elements: ${animElements.length}
      `;

      // Auto-hide after 5 seconds if everything is OK
      if (hasGsap && hasScrollTrigger && animElements.length > 0) {
        setTimeout(() => {
          if (statusEl) statusEl.style.display = 'none';
        }, 5000);
      }
    }
  }, 1000);
</script>
