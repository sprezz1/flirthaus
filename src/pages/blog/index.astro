---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="FlirtHaus Blog - OnlyFans Chatting Insights" description="Expert insights on OnlyFans chatting, creator success strategies, and industry trends from the FlirtHaus team." />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;700;900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-background" style="font-family: 'Inter', sans-serif;">
		<Header />

		<!-- Blog Header -->
		<section class="bg-primary section-sm">
			<div class="container max-w-4xl mx-auto px-6 text-center">
				<span class="badge badge-secondary inline-block mb-4">Insights & Expertise</span>
				<h1 class="heading-lg mb-4" style="color: white; font-family: 'Playfair Display', serif;">
					FlirtHaus Blog
				</h1>
				<p class="text-lg" style="color: #F8F4F0; opacity: 0.9;">
					Expert insights on OnlyFans chatting, creator success strategies, and industry trends
				</p>
			</div>
		</section>

		<!-- Blog Posts Grid -->
		<section class="section bg-light">
			<div class="container max-w-6xl mx-auto px-6">
				<div class="grid md:grid-cols-2 gap-8">
					{posts.map((post) => (
						<article class="card" style="background: white;">
							<a href={`/blog/${post.id}/`} style="text-decoration: none;">
								{post.data.heroImage && (
									<div style="margin: -32px -32px 24px -32px; border-radius: 16px 16px 0 0; overflow: hidden;">
										<Image
											width={720}
											height={360}
											src={post.data.heroImage}
											alt={post.data.title}
											style="width: 100%; height: auto; display: block; transition: transform 0.3s ease;"
											class="hover:scale-105"
										/>
									</div>
								)}

								<div style="margin-bottom: 12px;">
									<FormattedDate date={post.data.pubDate} />
								</div>

								<h2 class="card-title" style="margin-bottom: 12px;">
									{post.data.title}
								</h2>

								{post.data.description && (
									<p class="card-content" style="margin-bottom: 16px;">
										{post.data.description}
									</p>
								)}

								<span class="link" style="display: inline-block;">
									Read more â†’
								</span>
							</a>
						</article>
					))}
				</div>

				{posts.length === 0 && (
					<div class="text-center" style="padding: 80px 20px;">
						<p style="font-size: 1.25rem; color: #3D3D3D; opacity: 0.7;">
							No blog posts yet. Check back soon for expert insights!
						</p>
					</div>
				)}
			</div>
		</section>

		<!-- Newsletter CTA -->
		<section class="bg-burgundy section-sm">
			<div class="container max-w-4xl mx-auto px-6 text-center">
				<h2 class="heading-md mb-4" style="color: white; font-family: 'Playfair Display', serif;">
					Stay Updated
				</h2>
				<p class="text-lg mb-8" style="color: #F8F4F0; opacity: 0.9;">
					Get the latest insights on OnlyFans chatting and creator success delivered to your inbox
				</p>
				<form class="flex flex-col sm:flex-row gap-4 justify-center items-center max-w-xl mx-auto">
					<input
						type="email"
						placeholder="your@email.com"
						class="input"
						style="flex: 1; min-width: 250px;"
					>
					<button class="btn btn-secondary btn-lg" style="white-space: nowrap;">
						Subscribe
					</button>
				</form>
			</div>
		</section>

		<Footer />
	</body>
</html>
